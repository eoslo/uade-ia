<div class="page-wrapper" ng-controller="EmployeesController" ng-init="getUserId('{{user._id}}')">
    <!-- MENU SIDEBAR-->
    <aside class="menu-sidebar2">
        <div class="logo">
            <a href="#">
                <h2 style="color: white">¡Sueldos Ya!</h2>
            </a>
        </div>
        <div class="menu-sidebar2__content js-scrollbar1">
            <div class="account2">
                <h4 class="name">{{user.name}}</h4>
                <a href="/logout">Cerrar sesión</a>
            </div>
            <nav class="navbar-sidebar2">
                <ul class="list-unstyled navbar__list">
                    <li>
                        <a href="/employees">
                            <i class="fa fa-user"></i>Empleados
                        </a>
                    </li>
                    <li>
                        <a href="/updates">
                            <i class="fa fa-check-square"></i>Novedades
                        </a>
                    </li>
                    <li>
                        <a href="/payroll">
                            <i class="fa fa-dollar"></i>Liquidaciones
                        </a>
                    </li>
                    <li>
                        <a href="/bills">
                            <i class="fa fa-list-alt"></i>Facturas
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>
    <!-- END MENU SIDEBAR-->

    <!-- PAGE CONTAINER-->
    <div class="page-container2">
        <!-- HEADER DESKTOP-->
        <header class="header-desktop2">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="header-wrap2">
                        <div class="header-button2">
                            <div class="header-button-item js-item-menu">
                                <i class="zmdi zmdi-search"></i>
                                <div class="search-dropdown js-dropdown">
                                    <form action="">
                                        <input class="au-input au-input--full au-input--h65" type="text" placeholder="Buscar..." />
                                        <span class="search-dropdown__icon">
                                            <i class="zmdi zmdi-search"></i>
                                        </span>
                                    </form>
                                </div>
                            </div>
                            <div class="header-button-item has-noti js-item-menu">
                                <i class="zmdi zmdi-notifications"></i>
                                <div class="notifi-dropdown js-dropdown">
                                    <div class="notifi__title">
                                        <p>Usted tiene 3 notificaciones</p>
                                    </div>
                                    <div class="notifi__item">
                                        <div class="bg-c1 img-cir img-40">
                                            <i class="zmdi zmdi-email-open"></i>
                                        </div>
                                        <div class="content">
                                            <p>Usted tiene un correo nuevo</p>
                                            <span class="date">12 de Abril, 2018 09:37</span>
                                        </div>
                                    </div>
                                    <div class="notifi__item">
                                        <div class="bg-c2 img-cir img-40">
                                            <i class="zmdi zmdi-account-box"></i>
                                        </div>
                                        <div class="content">
                                            <p>Su cuenta ha sido bloqueada</p>
                                            <span class="date">12 de Abril, 2018 09:23</span>
                                        </div>
                                    </div>
                                    <div class="notifi__item">
                                        <div class="bg-c3 img-cir img-40">
                                            <i class="zmdi zmdi-file-text"></i>
                                        </div>
                                        <div class="content">
                                            <p>Usted tiene un nuevo archivo</p>
                                            <span class="date">11 de Abril, 2018 18:56</span>
                                        </div>
                                    </div>
                                    <div class="notifi__footer">
                                        <a href="#">Todas las Notificaciones</a>
                                    </div>
                                </div>
                            </div>
                            <div class="header-button-item mr-0 js-sidebar-btn">
                                <i class="zmdi zmdi-menu"></i>
                            </div>
                            <div class="setting-menu js-right-sidebar d-none d-lg-block">
                                <div class="account-dropdown__body">
                                    <div class="account-dropdown__item">
                                        <a href="#">
                                            <i class="zmdi zmdi-account"></i>Cuenta</a>
                                    </div>
                                    <div class="account-dropdown__item">
                                        <a href="#">
                                            <i class="zmdi zmdi-settings"></i>Configuración</a>
                                    </div>
                                    <div class="account-dropdown__item">
                                        <a href="#">
                                            <i class="zmdi zmdi-money-box"></i>Facturación</a>
                                    </div>
                                </div>
                                <div class="account-dropdown__body">
                                    <div class="account-dropdown__item">
                                        <a href="#">
                                            <i class="zmdi zmdi-globe"></i>Lenguaje</a>
                                    </div>
                                    <div class="account-dropdown__item">
                                        <a href="#">
                                            <i class="zmdi zmdi-pin"></i>Ubicación</a>
                                    </div>
                                    <div class="account-dropdown__item">
                                        <a href="#">
                                            <i class="zmdi zmdi-email"></i>Email</a>
                                    </div>
                                    <div class="account-dropdown__item">
                                        <a href="#">
                                            <i class="zmdi zmdi-notifications"></i>Notificaciones</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- END HEADER DESKTOP-->

        <!-- BREADCRUMB-->
        <section class="au-breadcrumb m-t-75">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="au-breadcrumb-content">
                                <div class="au-breadcrumb-left">
                                    <span class="au-breadcrumb-span">Usted está aquí:</span>
                                    <ul class="list-unstyled list-inline au-breadcrumb__list">
                                        <li class="list-inline-item">Liquidaciones</li>
                                    </ul>
                                </div>
                                <button class="au-btn au-btn-icon au-btn--green" type="button" data-toggle="modal"
                                        data-target="#largeModal">
                                    <i class="zmdi zmdi-money"></i>Liquidar Sueldos
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- END BREADCRUMB-->

        <section>
            <div class="section__content section__content--p30">
                <div class="container-fluid ">
                    <div class="row">
                        <div class="col-xl-12">
                            <!-- USER DATA-->
                            <div class="user-data m-b-40">
                                <h3 class="title-3 m-b-30">
                                    <i class="zmdi zmdi-money-box"></i>Liquidaciones</h3>
                                <div class="table-responsive table-data">
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <td>Empleado / DNI</td>
                                            <td>Fecha</td>
                                            <td>Tipo de Sueldo</td>
                                            <td>Salario</td>
                                            <td>Monto Liquidación</td>
                                            <td></td>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr ng-repeat="employee in employees">
                                            <td>
                                                <div class="table-data__info">
                                                    <h6 ng-bind="employee.name"></h6>
                                                    <span ng-bind="employee.dni"></span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="table-data__info">
                                                    <span ng-if="employee.payroll_type == 'monthly'">Mensual</span>
                                                    <span ng-if="employee.payroll_type == 'per_hour'">Por hora</span>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="table-data__info">
                                                    $ <span ng-if="employee.payroll_type == 'monthly'" ng-bind="employee.gross_salary"></span>
                                                    <span ng-if="employee.payroll_type == 'per_hour'" ng-bind="employee.salary_per_hour"></span>
                                                    <span ng-if="employee.payroll_type == 'per_hour'"> / hora</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span ng-if="employee.status == 'active'" class="state active">Activo</span>
                                                <span ng-if="employee.status == 'inactive'" class="state inactive">Inactivo</span>
                                            </td>
                                            <td>
                                                    <span class="more">
                                                        <i class="zmdi zmdi-more"></i>
                                                    </span>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- END USER DATA-->
                        </div>
                    </div>
                </div>
            </div>

        <!-- END PAGE CONTAINER-->
    </div>

</div>