<div class="page-wrapper" ng-controller="UpdatesController" ng-init="getUserId('{{user._id}}')">
    <!-- MENU SIDEBAR-->
    <aside class="menu-sidebar2">
        <div class="logo">
            <a href="#">
                <h2 style="color: white">¡Sueldos Ya!</h2>
            </a>
        </div>
        <div class="menu-sidebar2__content js-scrollbar1">
            <div class="account2">
                <h4 class="name">{{user.name}}</h4>
                <a href="/logout">Cerrar sesión</a>
            </div>
            <nav class="navbar-sidebar2">
                <ul class="list-unstyled navbar__list">
                    <li>
                        <a href="/employees">
                            <i class="fa fa-user"></i>Empleados
                        </a>
                    </li>
                    <li class="active">
                        <a>
                            <i class="fa fa-check-square"></i>Novedades
                        </a>
                    </li>
                    <li>
                        <a href="/payroll">
                            <i class="fa fa-dollar"></i>Liquidaciones
                        </a>
                    </li>
                    <li>
                        <a href="/bills">
                            <i class="fa fa-list-alt"></i>Facturas
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>
    <!-- END MENU SIDEBAR-->

    <!-- PAGE CONTAINER-->
    <div class="page-container2">
        <!-- BREADCRUMB-->
        <section class="au-breadcrumb m-t-75">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="au-breadcrumb-content">
                                <div class="au-breadcrumb-left">
                                    <span class="au-breadcrumb-span">Usted está aquí:</span>
                                    <ul class="list-unstyled list-inline au-breadcrumb__list">
                                        <li class="list-inline-item">Novedades</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- END BREADCRUMB-->

        <section>
            <div class="section__content section__content--p30">
                <div class="container-fluid ">
                    <div class="row">
                        <div class="col-xl-12">
                            <!-- USER DATA-->
                            <div class="user-data m-b-40">
                                <h3 class="title-3 m-b-30">
                                    <i class="zmdi zmdi-calendar-check"></i>Novedades</h3>
                                
                                <div class="table-responsive table-data">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <td>Empleado</td>
                                                <td>Tipo de novedad</td>
                                                <td>Monto / Cantidad</td>
                                                <td>Fecha de creación</td>
                                                <td>Acciones</td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="update in updates">
                                                
                                                <td>
                                                    <div class="table-data__info">
                                                        <span ng-if="employee.payroll_type == 'monthly'">Mensual</span>
                                                        <span ng-if="employee.payroll_type == 'per_hour'">Por hora</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="table-data__info">
                                                        <h6 ng-if="update.update == 'worked_hours'">Horas trabajadas</h6>
                                                        <h6 ng-if="update.update == 'salary_change'">Cambio de Sueldo</h6>
                                                        <h6 ng-if="update.update == 'absense_days'">Días ausentes</h6>
                                                        <h6 ng-if="update.update == 'per_hour_change'">Cambio de valor por hora</h6>
                                                        <h6 ng-if="update.update == 'bonus'">Bono</h6>
                                                        <h6 ng-if="update.update == 'vacation_days'">Días de vacaciones</h6>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="table-data__info">
                                                        $ <span ng-if="employee.payroll_type == 'monthly'" ng-bind="employee.gross_salary"></span>
                                                        <span ng-if="employee.payroll_type == 'per_hour'" ng-bind="employee.salary_per_hour"></span>
                                                        <span ng-if="employee.payroll_type == 'per_hour'"> / hora</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="more">
                                                        <i class="zmdi zmdi-more"></i>
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- END USER DATA-->
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- END PAGE CONTAINER-->
    </div>

</div>