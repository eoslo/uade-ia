<div class="page-wrapper" ng-controller="RegisterController">
    <div class="page-content--bge5">
        <div class="container login">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <h1>¡Sueldos Ya!</h1>
                        </a>
                    </div>
                    <div class="login-form">
                        <form ng-submit="registerClient()">
                            <div class="form-group">
                                <label>Usuario</label>
                                <input ng-model="form.username" class="au-input au-input--full" type="text" name="username" placeholder="Usuario" required>
                            </div>
                            <div class="form-group">
                                <label>Contraseña</label>
                                <input ng-model="form.password" class="au-input au-input--full" type="password" name="password" placeholder="Contraseña" required>
                            </div>
                            <div class="form-group">
                                <label>Nombre</label>
                                <input ng-model="form.name" class="au-input au-input--full" type="text" name="name" placeholder="Nombre" required>
                            </div>
                            <div class="form-group">
                                <label>Entidad legal</label>
                                <div class="form-check">
                                    <div class="radio">
                                        <label for="physical" class="form-check-label ">
                                            <input ng-model="form.person_type" id="physical" type="radio" name="person_type" value="physical" class="form-check-input" required>Física
                                        </label>
                                    </div>
                                    <div class="radio">
                                        <label for="legal_entity" class="form-check-label ">
                                            <input ng-model="form.person_type" id="legal_entity" type="radio" name="person_type" value="legal_entity" class="form-check-input" required>Jurídica
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Dirección</label>
                                <input ng-model="form.address" class="au-input au-input--full" type="text" name="address" placeholder="Dirección">
                            </div>
                            <div class="form-group">
                                <label>Cuit</label>
                                <input ng-model="form.cuit" class="au-input au-input--full" type="text" name="cuit" placeholder="Cuit" required>
                            </div>
                            <div class="form-group">
                                <label>IVA</label>
                                <input ng-model="form.iva" class="au-input au-input--full" type="text" name="iva" placeholder="IVA"required>
                            </div>
                            <div class="form-group" ng-show="form.person_type == 'legal_entity'">
                                <label>Ingresos brutos</label>
                                <input ng-model="form.gross_income" class="au-input au-input--full" type="text" name="gross_income" placeholder="Ingresos brutos" ng-required="form.person_type == 'legal_entity'">
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">register</button>
                        </form>
                        <div class="register-link">
                            <p>
                                ¿Ya tiene una cuenta?
                                <a href="/login">Log In</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>