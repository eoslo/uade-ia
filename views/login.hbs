<div class="page-wrapper" ng-controller="LoginController">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <h1>Sueldos ya</h1>
                        </a>
                    </div>
                    <div class="login-form">
                        <form ng-submit="login()">
                            <div class="form-group">
                                <label>Usuario</label>
                                <input ng-model="form.username" class="au-input au-input--full" type="text" name="username" placeholder="Usuario">
                            </div>
                            <div class="form-group">
                                <label>Contraseña</label>
                                <input ng-model="form.password" class="au-input au-input--full" type="password" name="password" placeholder="Contraseña">
                            </div>
                            <div class="login-checkbox">
                                <label>
                                    <input type="checkbox" name="remember">Remember Me
                                </label>
                                {{!-- <label>
                                    <a href="#">Forgotten Password?</a>
                                </label> --}}
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
                        </form>
                        <div class="register-link">
                            <p>
                                Don't you have account?
                                <a href="/register">Sign Up Here</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>