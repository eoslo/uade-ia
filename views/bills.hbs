<div class="page-wrapper" ng-controller="BillsController" ng-init="getUserId('{{user._id}}')">
    <!-- MENU SIDEBAR-->
    <aside class="menu-sidebar2">
        <div class="logo">
            <a href="#">
                <h2 style="color: white">¡Sueldos Ya!</h2>
            </a>
        </div>
        <div class="menu-sidebar2__content js-scrollbar1">
            <div class="account2">
                <h4 class="name fade-text">{{user.name}}</h4>
                <a href="/logout">Cerrar sesión</a>
            </div>
            <nav class="navbar-sidebar2">
                <ul class="list-unstyled navbar__list">
                    <li>
                        <a href="/employees">
                            <i class="fa fa-users"></i>Empleados
                        </a>
                    </li>
                    <li>
                        <a href="/updates">
                            <i class="fa fa-check-square"></i>Novedades
                        </a>
                    </li>
                    <li>
                        <a href="/payroll">
                            <i class="fa fa-dollar"></i>Liquidaciones
                        </a>
                    </li>
                    <li>
                        <span class="active fade-background white-text">
                            <i class="fa fa-list-alt"></i>Facturas
                        </span>
                    </li>
                    <li>
                        <a href="/profile">
                            <i class="fa fa-user"></i>Cuenta
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>
    <!-- END MENU SIDEBAR-->

    <!-- PAGE CONTAINER-->
    <div class="page-container2">
        <!-- BREADCRUMB-->
        <section class="au-breadcrumb m-t-75">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="au-breadcrumb-content">
                                <div class="au-breadcrumb-left">
                                    <span class="au-breadcrumb-span">Usted está aquí:</span>
                                    <ul class="list-unstyled list-inline au-breadcrumb__list">
                                        <li class="list-inline-item">Facturas</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- END BREADCRUMB-->

        <!-- HEADER -->
        <header class="header-desktop2 fading">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="header-wrap2">
                    </div>
                </div>
            </div>
        </header>
        <!-- END HEADER -->

        <section>
            <div class="section__content section__content--p30">
                <div class="container-fluid ">
                    <div class="row">
                        <div class="col-xl-12">
                            <!-- USER DATA-->
                            <div class="user-data m-b-40">
                                <h3 class="title-3 m-b-30 white-text">
                                    <i class="zmdi zmdi-tv-list"></i>Facturas</h3>
                                <div class="table-data">
                                    <table class="table" ng-if="bills.length != 0">
                                        <thead class="white-text">
                                        <tr>
                                            <td class="white-text">N° Factura</td>
                                            <td class="white-text">Fecha Vencimiento</td>
                                            <td class="white-text">Costo base</td>
                                            <td class="white-text">Cant. empleados</td>
                                            <td class="white-text">Costo por empleado</td>
                                            <td class="white-text">Total bruto</td>
                                            <td class="white-text">IVA</td>
                                            <td class="white-text">Total</td>
                                            <td class="white-text">Estado</td>
                                        </tr>
                                        </thead>
                                        <tbody  class="white-background">
                                            <tr ng-repeat="bill in bills">
                                                <td>
                                                    <div class="table-data__info">
                                                        <span ng-bind="bill.bill_number"></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="table-data__info">
                                                        <span ng-bind="bill.expiration_date"></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="table-data__info">
                                                        <span ng-bind="bill.base_cost"></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="table-data__info">
                                                        <span ng-bind="bill.employees_amount"></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="table-data__info">
                                                        <span ng-bind="bill.cost_per_employee"></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="table-data__info">
                                                        <span ng-bind="bill.gross_amount"></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="table-data__info">
                                                        <span ng-bind="bill.iva_value"></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="table-data__info">
                                                        <span ng-bind="bill.total_amount"></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span ng-if="bill.status == 'payment pending'" class="state pending">Pendiente</span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <h3 class="title-3 m-b-30" ng-if="updates.length == 0">No tiene novedades registradas.</h3>
                                </div>
                            </div>
                            <!-- END USER DATA-->
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PAGE CONTAINER-->
        </section>
    </div>
</div>